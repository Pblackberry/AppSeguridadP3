<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppSeguridad.MainPage">
    <VerticalStackLayout Padding="20" Spacing="25" VerticalOptions="Center">
        <Label Text="¿Cuál es tu grupo de edad?"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Niños (6 a 12 años)" Clicked="OnNinosClicked"/>
        <Button Text="Adolescentes (12 a 18 años)" Clicked="OnAdolescentesClicked"/>
        <Button Text="Adultos mayores (65+)" Clicked="OnAdultosClicked"/>
    </VerticalStackLayout>
</ContentPage>

